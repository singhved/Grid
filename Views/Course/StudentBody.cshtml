@{
    int id = ViewBag.Id;
    System.Data.DataSet ds = Grid.Models.Procs.Editcourse(id);
    System.Data.DataTable courseStudent = ds.Tables[0];
    System.Data.DataTable courseData = ds.Tables[1];
}
<form method="post" action="/Course/Edit">
    <input type="hidden" id="Id" name="Id" value="@id" />
    <div class="row">
        <div class="col-sm-4">
            <div class="from-group">
                <label>Name</label>
                <input id="Name" name="Name" type="text" class="form-control" value="@courseStudent.Rows[0]["Name"].ToString()"><br>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="from-group">
                <label>Mobile</label>
                <input id="Mobile" name="Mobile" type="text" class="form-control" value="@courseStudent.Rows[0]["Mobile"].ToString()"><br>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="from-group">
                <label>Email</label>
                <input id="Email" name="Email" type="text" class="form-control" value="@courseStudent.Rows[0]["Email"].ToString()"><br>
            </div>
        </div>
    </div>
    <h4>Course Details</h4>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group table-responsive">
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <th>Course</th>
                            <th>Branch</th>
                            <th>StartDate</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < courseData.Rows.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="text" class="form-control" value="@courseData.Rows[i]["Course"].ToString()" required />
                                </td>
                                <td>
                                    <input type="text" class="form-control" value="@courseData.Rows[i]["Branch"].ToString()" required />
                                </td>
                                <td>
                                    <input type="date" class="form-control" value="@Convert.ToDateTime(courseData.Rows[i]["Date"].ToString()).ToString("yyyy-MM-dd")" required />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 offset-9">
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style=" margin-left: 227px; margin-top: -32px;">Save</button>
            </div>
        </div>
    </div>
</form>


